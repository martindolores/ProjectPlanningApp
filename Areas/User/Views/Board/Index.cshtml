@model ProjectPlanningApp.Areas.User.Models.Board
@{
    ViewData["Title"] = "Index";
}

<!--Heading-->
<div class="p-5 mb-4 rounded-3">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-4 font-weight-bold">Boards</h1>
        <hr />
        <!--Main-->
        <div class="container p-5">
            <div class="row">
                <div class="col">
                    <div class="h-100 p-5 text-light bg-dark rounded-4">
                        <h2>Create Boards</h2>
                        <hr class="text-light" />
                        <p>
                            Boards keep tasks structured and the process going ahead regardless of the project or procedure.
                            You can view everything at a glance, from "To-Do" to "Done"!
                        </p>
                        <button class="btn btn-outline-light" type="button" data-toggle="modal" data-target="#exampleModalLong">
                            Create a new Board!
                        </button>
                    </div>
                </div>
                <div class="col">
                    <div class="h-100 p-5 bg-light border rounded-4">
                        <h2>View Boards</h2>
                        <hr class="text-dark" />
                        <p>
                            <br />
                            Here, you can keep track of all the boards you have created!
                        </p>
                        <a class="btn btn-outline-secondary" asp-action="View">View Boards</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<form method="post" asp-action="Create">
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create Board</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div>
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="BackgroundColour"></label>
                        <div class="input-group">
                            <input asp-for="Title" type="text" class="form-control input-lg" id="colorHex" value="#000000" disabled/>
                            <span class="input-group-append">
                                <input type="color" class="form-control form-control-color input-group-text" id="colorChoice" />
                            </span>
                        </div>
                        <span asp-validation-for="BackgroundColour" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}

    <script type="text/javascript">
        $("#colorChoice").change(function () {
            var color = $("#colorChoice").val();
            $("#colorHex").val(color);
        });
    </script>
}